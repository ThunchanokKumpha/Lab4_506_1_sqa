	@Test
	void TestTwoDigitIV() {
		RomanNumerals roman  = new RomanNumerals();
		int result = roman .convertRomanNumToInt("IV");
		assertEquals(4, result);
	}
	
	@Test
	void TestTwoDigitXL() {
		RomanNumerals roman  = new RomanNumerals();
		int result = roman .convertRomanNumToInt("XL");
		assertEquals(40, result);
	}
	@Test
	void TestTwoDigitXC() {
		RomanNumerals roman  = new RomanNumerals();
